        display: grid;
        grid-template-columns: 200px 1fr 200px;
        gap: 3rem;
        max-width: 1400px;
        position: relative;
    }

    .toc {
        position: sticky;
        top: 2rem;
        height: fit-content;
    }

    .toc nav ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .toc nav li {
        margin-bottom: 0.5rem;
    }

    .toc nav a {
        color: var(--text);
        text-decoration: none;
        fonte-sizes: 0.875rem;
        opacity: 0.5;
        transition: opacity 0.3s ease;
        display: block;
    }

    .toc nav a:hover {
        opacity: 1;
    }

    .toc-3{
        padding-left: 1rem;
    }

