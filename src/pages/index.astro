---
import NewsletterForm from '../components/NewsletterForm.astro';
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

export const prerender = true;

const thoughts = await getCollection('thoughts', ({ data }) => {
  return data.draft !== true;
});

const projects = await getCollection('projects', ({ data }) => {
  return data.draft !== true;
});

const experiments = await getCollection('experiments', ({ data }) => {
  return data.draft !== true;
});

const latestThoughts = thoughts.sort((a, b) =>
    b.data.date.getTime() - a.data.date.getTime()
).slice(0, 10);

const latestProjects = projects.sort((a, b) =>
    b.data.date.getTime() - a.data.date.getTime()
).slice(0, 10);

const latestExperiments = experiments.sort((a, b) =>
    b.data.date.getTime() - a.data.date.getTime()
).slice(0, 10);
---

<Layout title="Broderick">
    <main class="container">
        <header class="hero">
            <h1>Hello, I'm Broderick</h1>
            <p class="subtitle">Welcome to my home on the internet. I hope you enjoy your stay :)</p>
        </header>

        <nav class="nav">
            <div class="nav-menu">
                <a href="/" class="nav-link nav-triangle active">
                    <img src="/assets/svg/triangle.svg" alt="Home">
                </a>
                <a href="/about" class="nav-link">About</a>
                <a href="/projects" class="nav-link">Projects</a>
                <a href="/thoughts" class="nav-link">Thoughts</a>
                <a href="/experiments" class="nav-link">Experiments</a>
            </div>
        </nav>

        <section class="three-columns">
            <div class="column">
                <h2>Recent Thoughts</h2>
                <div class="item-list">
                    {latestThoughts.map(thought => (
                        <a href={`/${thought.slug}`} class="item">
                            <h3>{thought.data.title}</h3>
                            <p class="description">{thought.data.description}</p>
                            <span class="date">{thought.data.date.toLocaleDateString('en-US', {
                                year: 'numeric',
                                month: '2-digit',
                                day: '2-digit',
                                timeZone: 'UTC'
                            }).replace(/\//g, '/')}</span>
                        </a>
                    ))}
                </div>
            </div>

            <div class="column">
                <h2>Projects & Experiments</h2>
                <div class="item-list">
                    {[...latestProjects, ...latestExperiments]
                        .sort((a, b) => b.data.date.getTime() - a.data.date.getTime())
                        .slice(0, 10)
                        .map(item => (
                        <a href={`/${item.slug}`} class="item">
                            <h3>{item.data.title}</h3>
                            <p class="description">{item.data.description}</p>
                            <span class="date">{item.data.date.toLocaleDateString('en-US', {
                                year: 'numeric',
                                month: '2-digit',
                                day: '2-digit',
                                timeZone: 'UTC'
                            }).replace(/\//g, '/')}</span>
                        </a>
                    ))}
                </div>
            </div>

            <div class="column">
                <NewsletterForm />
            </div>
        </section>
    </main>
</Layout>

<style>
   .item-list {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
   }

   .item {
    display: flex;
    flex-direction: column;
    text-decoration: none;
    color: var(--text);
    gap: 0.25rem;
   }

   .item h3 {
    font-size: 1rem;
    font-weight: 400;
    margin: 0;
    line-height: 1.4;
   }

   .item .description {
    font-size: 0.875rem;
    opacity: 0.7;
    margin: 0;
    line-height: 1.5;
   }

   .item .date {
    font-size: 0.875rem;
    opacity: 0.5;
   }

   .item:hover h3 {
    opacity: 0.7;
   }

    .three-columns {
        display: grid;
        grid-template-columns: 1fr 1fr 1fr;
        gap: 2rem;
        margin-top: 5rem;
        margin-bottom: 5rem;
    }

    .column h2 {
        font-size: 1.5rem;
        font-weight: 600;
        margin-bottom: 1rem;
        line-height: 1.3;
    }

    @media (max-width: 768px) {
        .three-columns {
            grid-template-columns: 1fr;
            gap: 2rem;
        }
    }
</style>
