---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const thoughts = await getCollection('thoughts', ({ data }) => {
  return data.draft !== true;
});

const latestThought = thoughts.sort((a, b) =>
  b.data.date.getTime() - a.data.date.getTime()
)[0];
---

<Layout title="Broderick">
    <main class="container">
        <header class="hero">
            <h1>Hello, I'm Broderick</h1>
            <p class="subtitle">Welcome to my home on the internet. I hope you enjoy your stay :)</p>
        </header>

        <section class="three-columns">
            <div class="column">
                <h2>Recent Thoughts</h2>
            </div>

            <div class="column">
                <h2>Projects & Experiments</h2>
            </div>

            <div class="column">
                <h2>Like what I'm doing? You should subscribe to my newsletter.</h2>
            </div>
        </section>
    </main>
</Layout>

<style>
    .latest-thought {
        margin-top: 0rem;
        max-width: 600px;
    }

    .latest-thought h2 {
        font-size: 1.25rem;
        font-weight: 600;
        margin-bottom: 1rem;
        opacity: 0.7;
    }

    .thought-preview a {
        display: block;
        text-decoration: none;
        color: var(--text);
        padding: 1.5rem;
        background: rgba(0, 0, 0, 0.02);
        border-radius: 8px;
        transition: background 0.3s ease;
    }

    .thought-preview a:hover {
        background: rgba(0, 0, 0, 0.05);
    }

    .thought-preview h3 {
        font-size: 1.5rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
    }

    .thought-preview p {
        opacity: 0.7;
        line-height: 1.5;
        margin-bottom: 0.5rem;
    }

    .thought-preview time {
        font-size: 0.875rem;
        opacity: 0.5;
    }

    .three-columns {
        display: grid;
        grid-template-columns: 1fr 1fr 1fr;
        gap: 2rem; 
        margin-top: 5rem;
    }

    .column h2 {
        font-size: 1.5rem;
        font-weight: 600;
        margin-bottom: 1rem;
        line-height: 1.3;
    }

    @media (max-width: 768px) {
        .three-columns {
            grid-template-columns: 1fr;
            gap: 2rem;
        }
    }
</style>
